<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/background_light"
        android:layout_margin="10dp"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".80">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_perfil_medicop"
                android:background="@drawable/perfil" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".80">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_salir_medicop"
                android:background="@drawable/log"
                android:layout_margin="3dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:layout_margin="2dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:background="@drawable/icoprin"
            android:layout_height="40dp"
            android:layout_width="50dp"
            android:layout_marginBottom="150dp" />

        <Button
            android:text="Historial"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/btn_historial_medicop"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:layout_margin="5dp"
            android:textStyle="normal|bold" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/llama"
            android:id="@+id/btn_llamar_medicop"
            android:background="@drawable/llama"
            android:layout_margin="15dp" />

    </LinearLayout>

</RelativeLayout>